<html>
  <head>
    <title>Hair Salon</title>
    <link href='css/styles.css' type='text/css' rel='stylesheet' />
  </head>
  <body>
    <h1>Add a client to <%= @stylists.stylist_name() %></h1>

    <form action="/clients" method="post">
      <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylists.id() %>">

      <label for="client_name">Client name:</label>
      <input id="client_name" name="client_name" type="text">

      <button type="submit">Add client</button>
    </form>

    <% if @stylists.clients().any?() %>
      <h3>Here are all the clients for <%= @stylists.stylist_name() %></h3>

      <ul>
        <% @stylists.clients().each() do |client| %>
          <li><%= client.client_name() %></li>

        <% end %>
      </ul>
    <% else %>
      <p>There are no clients for <%= @stylists.stylist_name() %></p>
    <% end %>

    <a href="/">Return to main page</a>
  </body>
</html>
